@page
@model RazorPages.Pages.Store.MachineManager.EditMachineModel

@{
    ViewData["Title"] = "EditMachine";
}

<h1>Cập nhật máy giặt</h1>

<h4>Máy giặt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Machine.Id" type="hidden"/>
            <input asp-for="Machine.StoreId" type="hidden" />
            <div class="form-group">
                <label asp-for="Machine.Name" class="control-label"></label>
                <input asp-for="Machine.Name" class="form-control" />
                <span asp-validation-for="Machine.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machine.Description" class="control-label"></label>
                <input asp-for="Machine.Description" class="form-control" />
                <span asp-validation-for="Machine.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machine.Brand" class="control-label"></label>
                <input asp-for="Machine.Brand" class="form-control" />
                <span asp-validation-for="Machine.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machine.Model" class="control-label"></label>
                <input asp-for="Machine.Model" class="form-control" />
                <span asp-validation-for="Machine.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machine.Capacity" class="control-label"></label>
                <input asp-for="Machine.Capacity" class="form-control" />
                <span asp-validation-for="Machine.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Machine.IsAvailable" />
                    @Html.DisplayNameFor(model => model.Machine.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Machine.WashTimeInMinute" class="control-label"></label>
                <input asp-for="Machine.WashTimeInMinute" class="form-control" />
                <span asp-validation-for="Machine.WashTimeInMinute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập Nhật" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
